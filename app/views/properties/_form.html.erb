  </div>

  <div class="my-5">
    <%= form.label :city %>
    <%= form.text_field :city, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:city].none?, "border-red-400 focus:outline-red-600": property.errors[:city].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :district %>
    <%= form.text_field :district, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:district].none?, "border-red-400 focus:outline-red-600": property.errors[:district].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :square_meters %>
