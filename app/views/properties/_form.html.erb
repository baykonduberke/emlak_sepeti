  </div>

  <div class="my-5">
    <%= form.label :room_count %>
    <%= form.text_field :room_count, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": property.errors[:room_count].none?, "border-red-400 focus:outline-red-600": property.errors[:room_count].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :bathroom_count %>
